version: '2'

services:
  app:
    build:
      context: .
    container_name: api-test-front-back
    depends_on:
      - db
    env_file:
      - .env
    environment:
      - SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/${DB_POSTGRES_NAME}
      - SPRING_DATASOURCE_USERNAME=${DB_POSTGRES_USER}
      - SPRING_DATASOURCE_PASSWORD=${DB_POSTGRES_PASSWORD}
      - SPRING_JPA_HIBERNATE_DDL_AUTO=update

    ports:
      - "${API_PORT}:8080"

  db:
    image: 'postgres:13.1-alpine'
    container_name: postgres-test-front-back
    environment:
      - POSTGRES_USER=${DB_POSTGRES_USER}
      - POSTGRES_PASSWORD=${DB_POSTGRES_PASSWORD}
    ports:
      - "5432:5432"

    restart: always